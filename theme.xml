<theme>
   <view name="system">      
      <text name="system-game-count">
         <origin>0.5 0</origin>
         <size>0 0</size>
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.033333333333333</fontSize>
         <lineSpacing>1</lineSpacing>
         <systemdata>gamecountGamesNoText</systemdata>
         <color>a1a1a1</color>
      </text>
      <text name="system-game-count-label">
         <origin>0.5 0</origin>
         <size>0 0</size>
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.02037037037037</fontSize>
         <lineSpacing>1</lineSpacing>
         <text>Games</text>
         <color>a1a1a1</color>
      </text>
      <text name="system-favorites-count">
         <origin>0.5 0</origin>
         <size>0 0</size>
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.033333333333333</fontSize>
         <lineSpacing>1</lineSpacing>
         <systemdata>gamecountFavoritesNoText</systemdata>
         <color>a1a1a1</color>
      </text>
      <text name="system-favorites-count-label">
         <origin>0.5 0</origin>
         <size>0 0</size>
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.02037037037037</fontSize>
         <lineSpacing>1</lineSpacing>
         <text>Favorites</text>
         <color>a1a1a1</color>
      </text>
      <helpsystem name="help">
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.03</fontSize>
         <letterCase>capitalize</letterCase>
         <iconColor>a1a1a1</iconColor>
         <textColor>818181</textColor>
      </helpsystem>
   </view>
   <view name="gamelist">
      <textlist name="gamelist">
         <selectorColor>FFFFFFEE</selectorColor>
         <selectorImagePath>./_art/icon.png</selectorImagePath>
         <selectedColor>b21212</selectedColor>
         <selectorHeight>.05</selectorHeight>
         <primaryColor>EEEEEEEE</primaryColor>
         <secondaryColor>eac428</secondaryColor>
         <fontPath>./_art/comic.otf</fontPath>
         <pos>0.04 0.23</pos>
         <size>0.415 0.674</size>
         <fontSize>0.022</fontSize>
         <lineSpacing>1</lineSpacing>
         <horizontalMargin>0.04</horizontalMargin>
      </textlist>
      <text name="game-genre-label">
         <fontPath>./_art/player.ttf</fontPath>
         <fontSize>0.0270</fontSize>
         <lineSpacing>1</lineSpacing>
         <letterCase>capitalize</letterCase>
         <text>GENRE:</text>
         <color>232323DD</color>
         <defaultValue>:space:</defaultValue>
      </text>
      <image name="game-marquee">     
         <origin>0 0</origin>
         <maxSize>0.202 0.09</maxSize>
         <imageType>marquee</imageType>
      </image>
      <text name="game-description">
         <metadata>description</metadata>
         <fontPath>./_art/comic.otf</fontPath>
	      <fontSize>0.022</fontSize>
         <lineSpacing>1</lineSpacing>
         <verticalAlignment>bottom</verticalAlignment>
         <container>true</container>
         <containerStartDelay>6</containerStartDelay>
         <color>232323DD</color>
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.026</fontSize>
      </text>
      <text name="game-players-label">
         <color>23232300</color>
         <text>Players</text>
      </text>
      <text name="game-players">
         <color>232323DD</color>
         <fontPath>./_art/player.ttf</fontPath>
         <size>0.18 0.02</size>
         <fontSize>0.05</fontSize>
         <metadata>players</metadata>
         <defaultValue>:space:</defaultValue>
      </text>
      <text name="game-genre">
         <fontPath>./_art/player.ttf</fontPath>
         <fontSize>0.0270</fontSize>
         <lineSpacing>1</lineSpacing>
         <letterCase>capitalize</letterCase>
         <metadata>genre</metadata>
         <defaultValue>:space:</defaultValue>
         <color>232323DD</color>
         <size>0.15 0.02</size>
      </text>
      <rating name="rating">
         <origin>0.5 0</origin>
         <size>0.7 0.07</size>
         <filledPath>./_art/full.png</filledPath>
         <unfilledPath>./_art/empty.png</unfilledPath>
      </rating>
      <text name="game-play-count-label">
         <fontPath>./_art/player.ttf</fontPath>
         <size>0.18 0.02</size>
         <fontSize>0.0270</fontSize>
         <text>TIMES PLAYED:</text>
         <color>232323DD</color>
      </text>
      <text name="game-play-count">
         <fontPath>./_art/player.ttf</fontPath>
         <size>0.18 0.02</size>
         <fontSize>0.0470</fontSize>
         <metadata>playcount</metadata>
         <color>232323DD</color>
      </text>
      <image name="game-screenshot">     
         <origin>.5 .5</origin>
         <maxSize>0.317 0.359</maxSize>
         <imageType>miximage</imageType>
      </image>     
      <helpsystem name="help">
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.016</fontSize><!-- 22 -->
         <letterCase>capitalize</letterCase>
         <iconColor>232323DD</iconColor>
         <textColor>232323DD</textColor>
      </helpsystem>      
      <text name="game-developer">
         <origin>0.5 0</origin>
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.016</fontSize>
         <lineSpacing>1</lineSpacing>
         <metadata>developer</metadata>
         <defaultValue>--</defaultValue>
         <color>232323DD</color>
      </text> 
      <text name="game-publisher">
         <origin>0.5 0</origin>
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.016</fontSize>
         <horizontalAlignment>center</horizontalAlignment>
         <lineSpacing>1</lineSpacing>
         <metadata>publisher</metadata>
         <defaultValue>--</defaultValue>
         <color>232323DD</color>
      </text>
      <datetime name="game-release-date">
         <origin>0.5 0</origin>
         <metadata>releasedate</metadata>
         <defaultValue>Not Set</defaultValue>
         <fontPath>./_art/comic.otf</fontPath>
         <fontSize>0.016</fontSize>
         <lineSpacing>1</lineSpacing>
         <format>%d-%m-%Y</format>
         <defaultValue>--</defaultValue>
         <color>232323DD</color>
      </datetime>
   </view>

